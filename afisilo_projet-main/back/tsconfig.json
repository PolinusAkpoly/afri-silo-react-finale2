{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,  // Active les décorateurs
    "emitDecoratorMetadata": true    // Émet les métadonnées nécessaires pour les décorateurs
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
